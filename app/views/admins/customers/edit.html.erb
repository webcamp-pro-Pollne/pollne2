<div class="mx-auto w-50">
  <div class="row m-3">

    <h4 class="text-center col-md-9">登録情報編集</h4>
  </div>

  <%= form_with model: @customer, url: admins_customer_path, local: true , method: :patch do |f| %>
    
    <div class="form-inline mb-3">
    <label class="mr-4">会員ID</label>
    <p><%= @customer.id %></p>
    </div>
    <div class="form-inline mb-3">
      <label class="mr-4">お名前　</label>
      <div class="form-group mr-3">
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="form-inline mb-3">
      <label class="mr-4">フリガナ</label>
      <div class="form-group mr-3">
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="form-group">
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
      <div class="form-inline mb-3">
      <label class="mr-4">郵便番号</label>
      <%= f.text_field :postal_code  %>
    </div>

    <div class="form-group">
       <label class="mr-5">住所</label>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div class="form-group">
      <%= f.label "電話番号" %>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="row mb-3">
    <%= f.label :is_deleted, "会員ステータス", class: "col-md-4"  %>
    <%= f.radio_button :is_deleted, false %><span class="mr-5">有効</span>
    <%= f.radio_button :is_deleted, true %><span>退会</span>
    </div>



    <div class="form-group">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>

    </div>
  <% end  %>

</div>