<h3 class="heading">会員一覧</h3>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1"></div>
      <table class="table">
        
       <thead>
        
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
         
       </thead>
       <tbody>
           <% @customers.each do |customer|%>
             <tr>
               <td><%= customer.id %></td>
               <td><%= link_to admins_customer_path(customer.id) do %>
               <%= customer.last_name<< customer.first_name %>
               <% end %></td>
               <td><%= customer.email%></td>
               <td>
                 <% if customer.is_deleted == true %>
                   <%= "退会済み" %>
                 <% else %>
                   <%= "有効" %>
                 <% end %>
               </td>
             </tr>
           <% end %>
          
       </tbody>
      </table>
         <div class="c-index"><%= paginate @customers %></div>
  </div>
</div>