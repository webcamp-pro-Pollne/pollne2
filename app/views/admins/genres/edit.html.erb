<div class="container">
  <div class="row">
    <h2>ジャンル編集</h2>
  </div>
  <div class="row">
    <div class="col-8">
      <%= form_with model:[:admins, @genre], local: true do |f| %>
        <table class="table">
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            <td><%= link_to "削除", admins_genre_path(@genre.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>