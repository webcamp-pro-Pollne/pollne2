<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row">
    <%= form_with model:[:admins, @genre], local: true do |f| %>
    <table class="table-borderless">
      <tr>
        <td><%= f.label :name, "ジャンル名" %></td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "新規投稿", class: "btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>

  <div class="row">
    <table class="table">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      <%= @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>