<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  <div class="row">
    <div class="col">
      <%= attachment_image_tag @item, :image, :fill, 300, 250, fallback: "no_image.jpeg" %>
    </div>
    <div class="col">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genres.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td><%= @item.tax_price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <p style="color: green;">販売中</p>
            <% else %>
              <p style="color: red;">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admins_item_path(@item.id), class:"btn btn-create" %>
    </div>
  </div>
</div>