<div class="container">
  <div class = "row">
  <h2>注文履歴一覧</h2>
  <table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.orders_details.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.name %> </td>
        <td><%= order.orders_details.amount %></td>
        <td><%= order.orders_details.making_status%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>