<div class="container">
  <div class = "row">
    <div class = "col-md-1">
    </div>
    <div class = "col-md-10">
      <h2 class = "" >注文履歴一覧</h2>
      <table class= "table table-border text-right">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%m") %></td>
          <td><%= link_to order.customer.full_name, admins_order_path(order), data: {"turbolinks" => false} %></td>
          <td>
          <% @sum = 0 %>
          <% order.orders_details.each do |ordersdetail| %>
                <% @sum += ordersdetail.amount %>
                <% end %><%= @sum %>個</td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class = "col-md-1">
    </div>
    <div class = "row">
      <div class = "mx-auto">
        <%= paginate @orders %>
      </div>
    </div>
    </div>
   </div>
</div>