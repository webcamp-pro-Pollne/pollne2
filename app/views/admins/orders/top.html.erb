<div class="container">
  <div class = "row">
    <div class = "col-md-1">
    </div>
    <div class = "col-md-10">
      <h2>注文履歴一覧</h2>
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td><%= order.orders_details.first.amount %></td><!--あってるかわからないが、orders_detailsという配列から最初の一個を取り出すfirstメソットを使う。-->
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class = "col-md-1">
  </div>
  </div>
  </div>
</div>