<div calss = "container">
  <div class = "row" >
    <h2>ショッピングカート</h2>
    <%= link_to "カートを空にする",cart_items_destroy_all_path,calss: "btn btn-danger" %>
    <table class = "table table-bordered" >
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr><!--↓アソシエーション的にitemだけで参照できる？-->
            <td>
              <%= attachment_image_tag cart_item.item, :image,:fill,50,50,format: "jpeg",fallback: "no_image.jpg",size: "50x50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.tannka %> </td>
            <%= form_with model: cart_item,method: :post,local: true do |f| %>
              <td>
                <%= f.select :amount, option_for_select(@nembers,{selected: cart_item.amount.to_i})  %>
                <%= f.submit "変更" %>
              </td>
            <% end %>
            <%= link_to "削除",cart_item_path(cart_item.id),calss: "btn btn-danger" %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "買い物を続ける",root_path,class: "btn btn-primary" %>
    <table class = "table table-bordered" >
      <tr>
        <td>合計金額</td>
        <td><%= cart_item.total_price %></td>
      </tr>
    </table>
    <%= link_to "情報入力画面に進む",new_order_path,method: :post %>
  </div>
</div>
