<div class="container">

  <%= render "search", genres:@genres %>

  <h2>商品一覧</h2>
  <% @items.each do |item| %>
    <div class="items-index">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 60, 60, fallback: "no_image.jpeg" %>
      <% end %>
      <%= link_to item.name, item_path(item.id) %>
      <p>¥ <%= item.tax_price %></p>
    </div>
  <% end %>
  <%= paginate @items %>

</div>