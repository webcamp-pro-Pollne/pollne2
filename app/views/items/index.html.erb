<div class="container">

  <%= render "search", genres:@genres %>

  <h2>商品一覧<span class="font-weight-normal small">(全<%= @items_all.count %>件)</span></h2>
  <div class="row" style="flex-wrap: wrap;">
  <% @items.each do |item| %>
    <div class="items-index mx-3">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 250, 200, fallback: "no_image.jpeg" %>
      <% end %>
      <p><%= link_to item.name, item_path(item.id) %></p>
      <p>¥ <%= item.tax_price %></p>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>