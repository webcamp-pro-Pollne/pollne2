<h1>Index</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 60, 60, fallback: "no_image.png" %>
          <% end %>
        </td>
        <td><%= link_to item.name, item_path(item.id) %></td>
        <td><%= item.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>