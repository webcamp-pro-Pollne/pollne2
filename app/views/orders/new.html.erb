<h2>注文情報入力</h2>
<ol class = "nav">
  <li class = "current">1.入力</li>
  <li>2.確認</li>
  <li>3.完了</li>
</ol>
<%= form_with model: @order,url: "orders_confirm_path",method: :post ,local: true do |f| %>
  <%= f.radio_button :payment_method, 0,checked: "checked" %> <!--選択されたときにpayment_methodに0が入力される(初期はチェックが入っている)-->
  <%= f.label :payment_method,"クレジットカード",{value: :クレジットカード,style: "display: inline-block"} %>
  <!--input属性におけるvalueは入力コントロールにおける初期値-->
  <%= f.radio_button :payment_method, 1 %>
  <%= f.label :payment_method,"銀行振込",{value: :銀行振込,style: "display: inline-block"} %><br>

  <%= f.label :address,"お届け先" %><br>

  <%= f.radio_button :address, :ご自身の住所,checked: "checked" %>
  <%= f.label :address,"ご自身の住所" %>
  <%= @customer.postal_code %><!--アソシエーションを組んでいるcustomerのカラム内の値を持ってくる,変数をコントローラーで作る-->
  <%= @customer.address %><br>
  <%= @customer.name %>
  <br>

  <%= f.radio_button :address, :登録済住所から選択 %>
  <%= f.label :address,"登録済住所から選択" %>
  <%= f.collection_select :address , current_end_user.addresses, :id, :address , :include_blank => "選択してください" %>
  <!--f.collection_selectについて理解不足,プルダウンで選択肢の表示をしてくれる-->
  <br>

  <%= f.radio_button :address, :新しいお届け先 %>
  <%= f.label :address, "新しいお届け先" %>
  <br>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>
  <br>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <br>

  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  <br>

  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>


<% end %>