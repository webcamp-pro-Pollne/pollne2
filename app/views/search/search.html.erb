<div class="container">
  <h2><%= @datas.name %><sapn>全<%= @datas.count %>件</sapn></h2>
<% if @datas.empty? %>
  <h2>該当する商品はありません</h2>
<% end %>
<%= render "items/search", genres:@genres %>

  <% @datas.each do |data| %>
    <div>
      <%= link_to item_path(data.id) do %>
        <%= attachment_image_tag data, :image, :fill, 60, 60, fallback: "no_image.png" %><br>
      <% end %>
      <p><%=  data.name %></p><br>
      <p>￥<%= data.tax_price %></p>
    </div>
  <% end %>
</div>